<link rel="stylesheet" href="css/table.css" type="text/css">
<link rel="stylesheet" href="css/lightBox.css" type="text/css">
<link rel="stylesheet" href="css/createForm.css" type="text/css">
<h1 class="title">User Management</h1>
<div class="tableContainer">
	<div class="actionBar">
		<div class="searchBar side">
			<p><i class="fas fa-search"></i><input type="text" id="myInput" onkeyup="search()" placeholder="Search for a user..." title="User Search Bar"></p>
		</div>
		<div class="actions side">
			<p style="text-align:right;">
				<a id="removeButton" class="actionButton inactive" href="#">Remove</a>
				<a class="actionButton" href="/add-user">Add User</a></p>
		</div>
	</div>
	
		<table id="userTable">
			<tbody id="tableBody">
				<tr id="tableHead">
					<td class="checkBox">
						<div class="checkMark"><i class="fas fa-check checkoff"></i></div>
					</td>
					<th>Name <i class="sort fas fa-sort"></i></th>
					<th>User Type <i class="sort fas fa-sort"></i></th>
					<th>Email/Username <i class="sort fas fa-sort"></i></th>
					<th>Department <i class="sort fas fa-sort"></i></th>
					<th>Region <i class="sort fas fa-sort"></i></th>
					<th>Creation Date <i class="sort fas fa-sort"></i></th>
				</tr>
				{{#if users}}
					{{#each users}}
					<tr class="row">
						<td class="checkBox">
							<div class="checkMark"><i class="fas fa-check checkoff"></i></div>
						</td>
						<td class="name">{{this.name}}</td>
						<td class="userType" name="{{this.usertype}}"></td>
						<td class="email">{{this.email}}</td>
						<td class="department">{{this.department_name}}</td>
						<td class="region">{{this.region_name}}</td>
						<td>{{this.created_on}}</td>
						<td><p><button class="editButton" id="{{this.id}}">Edit</button></p></td>
					</tr>
					{{/each}}
				{{/if}}
			</tbody>
		</table>
	
</div>

<div id="lightBox" class="hidden">
	<div id="close">
		<i class="fas fa-times"></i>
	</div>
	<div id="lightBox-Inner">
		This is a test.
	</div>
</div>
<script type="text/javascript" src="js/umTable.js"></script>
