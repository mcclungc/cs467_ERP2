<link rel="stylesheet" href="css/table.css" type="text/css">
<link rel="stylesheet" href="css/lightBox.css" type="text/css">
<h1 class="title">Award History</h1>
<div class="tableContainer">
	<div class="actionBar">
		<div class="searchBar side">
			<p><i class="fas fa-search"></i><input type="text" id="myInput" placeholder="Search for an employee..." title="Employee Search Bar"></p>
		</div>
		<div class="actions side">
			<p style="text-align:right;">
				<a id="removeButton" class="actionButton inactive" href="#">Remove</a>
				<a class="actionButton" href="/award">Create Award</a></p>
		</div>
	</div>
	
		<table id="awardTable">
			<tbody id="tableBody">
				<tr id="tableHead">
					<td class="checkBox">
						<div class="checkMark"><i class="fas fa-check checkoff"></i></div>
					</td>
					<th>Recipient Name</th>
					<th>Award Type</th>
					<th>Department</th>
					<th>Region</th>
					<th>Recipient Email</th>
					<th>Sent Date</th>
					<th>Preview</th>
				</tr>
				{{#if awardrecords}}
					{{#each awardrecords}}
					<tr class="row">
						<td class="checkBox">
							<div class="checkMark"><i class="fas fa-check checkoff"></i></div>
						</td>
						<td class="name">{{this.recipient}}</td>
						<td class="awardType">{{this.awardtype}}</td>
						<td>{{this.recipient_department}}</td>
						<td>{{this.recipient_region}}</td>
						<td>{{this.recipient_email}}</td>
						<td>{{this.award_date}}</td>
						<td><p><button class="editButton" id="{{this.awardID}}">Preview</button></p></td>
					</tr>
					{{/each}}
				{{/if}}
			</tbody>
		</table>
	
</div>

<div id="lightBox" class="hidden">
	<div id="close">
		<i class="fas fa-times"></i>
	</div>
	<div id="lightBox-Inner">
		This is a test.
	</div>
</div>
<script type="text/javascript" src="js/awardTable.js"></script>
